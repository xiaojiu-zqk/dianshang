<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/img_categroy_detail_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        app:layout_constraintTop_toBottomOf="@id/img_categroy_detail_item"
        android:id="@+id/name_categroy_detail_item"
        android:layout_width="match_parent"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/name_categroy_detail_item"
        android:id="@+id/price_categroy_detail_item"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>