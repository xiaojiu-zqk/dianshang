<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_item_brand_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/name_item_brand_detail"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:layout_below="@id/img_item_brand_detail"
        android:text="11111111111111111111111"
        android:gravity="center"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/price_item_brand_detail"
        android:layout_marginLeft="25dp"
        android:text="2222222222222222222"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_below="@id/name_item_brand_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>